#!/bin/sh
set -e

case "$1" in
    configure)
        # Create state directory with proper permissions
        mkdir -p /var/lib/homarr-container-adapter
        chmod 755 /var/lib/homarr-container-adapter
        # Service enablement is handled by dh_installsystemd via #DEBHELPER#
        ;;
esac

#DEBHELPER#

exit 0
